<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:vm="clr-namespace:SmartLibrary.Common.ViewModels;assembly=SmartLibrary.Common"
			 x:Class="SmartLibrary.Maui.Views.MainPage"
			 x:DataType="vm:MainViewModel" Title="{Binding Title}">

    <VerticalStackLayout Margin="10" WidthRequest="200" HorizontalOptions="Start">
        <Label Text="Wer bist Du?" />
        <Entry Placeholder="Name eingeben" Text="{Binding UserName}" />
        <Button Text="Übernehmen" Command="{Binding UpdateUserCommand}"/>
    </VerticalStackLayout>
</ContentPage>
