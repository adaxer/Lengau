<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="SmartLibrary.Maui.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:SmartLibrary.Maui.Views"
	xmlns:local="clr-namespace:SmartLibrary.Maui">

	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="Main"
		Icon="iconblank.png"
		ContentTemplate="{DataTemplate views:MainPage}"
		Route="MainPage" />
	<ShellContent
		Shell.NavBarIsVisible="true"
		Title="ListDetail"
		Icon="iconlistdetail.png"
		ContentTemplate="{DataTemplate views:SearchPage}"
		Route="ListDetailPage" />
</Shell>
